<% @page_title = "User Login" %>

<%= form_tag(:action => 'attempt_login') do %>
  <div class="field">
    <%= label_tag(:username) %><br />
    <%= text_field_tag(:username) %>
  </div>
  <div class="field">
    <%= label_tag(:password) %><br />
    <%= password_field_tag(:password) %>
  </div>
  <div class="actions">
    <%= submit_tag("Log In") %>
  </div>
<% end %>
